%script#item-template{"type" => "text/template"}
  <div class="category">
  %div.display
    %div.category-text 
    %span#category-destroy
  %div.edit
    %input.category-input{"type" => "text", "value" =>""}/
  </div>

%script#stats-template{"type" => "text/template"}
  <% if (total) { %>
  %span.category-count
    %span.number <%= total %>
  <% } %>
